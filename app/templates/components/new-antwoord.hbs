{{#if addNewAntwoord}}
<h1 class="lightenUp">Add A New Antwoord To The CMB</h1>
<div class="container">
  <div class="col-sm-3">
  </div>
  <div class="col-sm-6">
    <form>
      <div class="form-group">
        <label class="pull-right" for="firstname">First Name</label>
        {{input class="form-control" value=firstname id="firstname"}}
      </div>
      <div class="form-group">
        <label class="pull-right" for="lastname">Last Name</label>
        {{input class="form-control" value=lastname id="lastname"}}
      </div>
      <div class="form-group">
        <label class="pull-right" for="content">Content</label>
        {{input class="form-control" value=content id="content"}}
      </div>
      <br>
      <div class="form-group">
        <label class="pull-right" for="rating">Rating</label>
        <select class="form-control" onchange={{action 'saveRating' value="target.value"}}>
          <option class="moonOption" value="1">🌚 </option>
          <option class="moonOption" value="2">🌚 🌒</option>
          <option class="moonOption" value="3">🌚 🌒 🌓</option>
          <option class="moonOption" value="4">🌚 🌒 🌓 🌔</option>
          <option class="moonOption" value="5" selected>🌚 🌒 🌓 🌔 🌝</option>
          <option class="moonOption" value="6">🌚 🌒 🌓 🌔 🌝 🌖</option>
          <option class="moonOption" value="7">🌚 🌒 🌓 🌔 🌝 🌖 🌗</option>
          <option class="moonOption" value="8">🌚 🌒 🌓 🌔 🌝 🌖 🌗 🌘</option>
          <option class="moonOption" value="9">🌚 🌒 🌓 🌔 🌝 🌖 🌗 🌘 🌚</option>
        </select>
      </div>
      <button class="btn btn-success btn-lg pull-right" {{action 'saveAntwoord'}}>Save</button>
    </form>
  </div>
  <div class="col-sm-3">
  </div>
</div>
{{else}}
<div class="ctrBtn">
  <button class="btn btn-success btn-lg" {{action 'antwoordFormShow'}}>Add A New Antwoord</button>
</div>
<hr>
{{/if}}
