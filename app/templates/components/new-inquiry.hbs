{{#if addNewInquiry}}
<h1>Add A New Inquiry To The Board</h1>
<div>
  <form>
    <div class="form-group">
      <label for="image">Image</label>
      {{input value=image id="image"}}
    </div>

    <div class="form-group">
      <label for="question">Inquiry</label>
      {{input value=question id="question"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="system">System</label>
      {{input value=system id="system"}}
    </div>

    <div class="form-group">
      <label for="notes">Notes</label>
      {{input value=notes id="notes"}}
    </div>

    <button {{action 'saveInquiry'}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'inquiryFormShow'}}>New Inquiry</button>
{{/if}}
